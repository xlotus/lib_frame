<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_load_opening_network_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_dimens_22dp"
        android:paddingLeft="@dimen/common_dimens_18dp"
        android:paddingRight="@dimen/common_dimens_18dp"
        android:paddingTop="@dimen/common_dimens_23dp">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_width="@dimen/common_dimens_50dp"
            android:layout_height="@dimen/common_dimens_50dp"
            app:mpb_indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/content"
            android:layout_marginStart="@dimen/common_dimens_13dp"
            android:layout_marginLeft="@dimen/common_dimens_13dp"
            android:layout_marginRight="@dimen/common_dimens_10dp"
            android:layout_marginEnd="@dimen/common_dimens_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_dimens_10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/common_load_error_opening_network"
            android:textColor="#eeeeee"
            android:textSize="@dimen/common_text_size_16sp" />
    </LinearLayout>


</FrameLayout>
