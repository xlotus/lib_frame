<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black_loading">#323232</color>
    <color name="colorAccent">#D81B60</color>
    <color name="colorPrimary">#008577</color>
    <color name="colorPrimaryDark">#00574B</color>
    <color name="green_c">#00e676</color>
    <color name="red_a">#f44336</color>
    <color name="translate">#000a6e93</color>
    <color name="transparent">#00000000</color>
    <color name="white_b">#b2ffffff</color>

    <style name="ErrorTextStyle">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LoadingTextStyle">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="myTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>